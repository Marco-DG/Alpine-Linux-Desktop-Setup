###############################################################
###                      SCRIPT VARS                       ###
###############################################################

_fetch="afetch"

###############################################################
###                      .ash_history                       ###
###############################################################

HISTFILE="$HOME/.config/ash_history"

###############################################################
###                    SHELL AESTHETICS                     ###
###############################################################

clear; $_fetch

PS1='\[\033[1;31m\]\W/\[\033[0m\] '

###############################################################
###                        ALIASES                          ###
###############################################################

alias ash="clear; $_fetch"
alias sh="clear; $_fetch"

###############################################################
###                         EXIT                            ###
###############################################################

unset _fetch