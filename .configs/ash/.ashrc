###############################################################
###                      SCRIPT VARS                       ###
###############################################################

_fetch="afetch"

###############################################################
###                      .ash_history                       ###
###############################################################

HISTFILE="$HOME/.config/ash_history"

###############################################################
###                    SHELL AESTHETICS                     ###
###############################################################

clear; $_fetch

PS1='\[\033[1;31m\]\W/\[\033[0m\] '

###############################################################
###                        ALIASES                          ###
###############################################################

alias fetch="clear; $_fetch"
alias ls="ls -a"
alias apk="doas apk"

###############################################################
###                         EXIT                            ###
###############################################################

unset _fetch